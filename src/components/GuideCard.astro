---
interface Props {
  title: string;
  description?: string;
  slug: string;
  pubDate: Date;
  tags?: string[];
}

const { title, description, slug, pubDate, tags } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('ru-RU', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<a href={`/guides/${slug}`} class="block bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow p-6 border border-gray-100">
  <h2 class="text-xl font-semibold text-gray-900 mb-2">{title}</h2>
  {description && <p class="text-gray-600 mb-4">{description}</p>}
  <div class="flex items-center justify-between">
    <span class="text-sm text-gray-500">{formattedDate}</span>
    {tags && tags.length > 0 && (
      <div class="flex gap-2">
        {tags.map((tag) => (
          <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded">{tag}</span>
        ))}
      </div>
    )}
  </div>
</a>
